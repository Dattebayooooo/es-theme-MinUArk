<theme>
  <formatVersion>7</formatVersion>
  
  <view name="screen">
    <text name="clock">
      <origin>0 0.5</origin>
      <pos>0.6 0.03</pos>
      <size>0.3 .1</size>
      <fontSize>0.035</fontSize>
      <color>FFFFFF90</color>
      <horizontalAlignment>center</horizontalAlignment>
      <verticalAlignment>center</verticalAlignment>
      <fontPath>./assets/BPreplayBold-unhinted.otf</fontPath>
    </text>

    <batteryIndicator name="batteryIndicator">
         <pos>0.92 0.003</pos>
         <size>0.06</size>
         <itemSpacing>1</itemSpacing>
         <full>./assets/battery=full.png</full>
         <at75>./assets/battery=75.png</at75>
         <at50>./assets/battery=50.png</at50>
         <at25>./assets/battery=25.png</at25>
         <empty>./assets/battery=empty.png</empty>
         <incharge>./assets/battery=charging.png</incharge>
       
         </batteryIndicator>
  </view>

  <view name="system">
    <helpsystem name="help">
      <fontPath>./assets/BPreplayBold-unhinted.otf</fontPath>
	  <textColor>FFFFFF90</textColor>
      <iconColor>FFFFFF90</iconColor>
      <fontSize>0.025</fontSize>
    </helpsystem>
  </view>
  
  <view name="basic, detailed, grid">
    <helpsystem name="help">
	  <textColor>FFFFFF90</textColor>
      <iconColor>FFFFFF90</iconColor>
      <fontPath>./assets/BPreplayBold-unhinted.otf</fontPath>
      <fontSize>0.022</fontSize>
    </helpsystem>
  </view>
  
</theme>
